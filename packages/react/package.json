{
  "name": "@stellar-snaps/react",
  "version": "0.1.0",
  "description": "React hooks and components for Stellar Snaps payments",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react && cp src/styles.css dist/styles.css 2>/dev/null || true",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --watch",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "@stellar-snaps/core": "workspace:*",
    "@stellar/freighter-api": "^6.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  },
  "keywords": [
    "stellar",
    "blockchain",
    "payments",
    "react",
    "hooks",
    "components",
    "freighter",
    "xlm",
    "usdc"
  ],
  "author": "0xsoydev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xsoydev/stellar-snaps.git",
    "directory": "packages/react"
  },
  "homepage": "https://stellar-snaps.vercel.app",
  "bugs": {
    "url": "https://github.com/0xsoydev/stellar-snaps/issues"
  }
}
