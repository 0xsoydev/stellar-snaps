{
  "name": "@stellar-snaps/core",
  "version": "0.1.0",
  "description": "Developer SDK for Stellar Snaps - shareable payment links for Stellar",
  "private": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "stellar",
    "blockchain",
    "payments",
    "crypto",
    "web3",
    "freighter",
    "payment-links",
    "xlm",
    "usdc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/0xsoydev/stellar-snaps.git",
    "directory": "packages/core"
  },
  "homepage": "https://stellar-snaps.vercel.app",
  "bugs": {
    "url": "https://github.com/0xsoydev/stellar-snaps/issues"
  },
  "author": "0xsoydev",
  "license": "MIT",
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "tsup": "^8.5.1",
    "typescript": "5.9.2"
  }
}
